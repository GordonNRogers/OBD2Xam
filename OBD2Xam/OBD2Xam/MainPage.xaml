<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OBD2Xam"
             x:Class="OBD2Xam.MainPage">

    <StackLayout>
        <Label VerticalOptions="Start">Available Bluetooth Devices:</Label>
        <ListView x:Name="deviceList"  BackgroundColor="LightYellow" SelectionMode="Single"></ListView>
        <Button x:Name="startButton" Clicked="StartButton_Clicked" Text="Connect" />
    </StackLayout>

</ContentPage>
